{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "lib": ["es2015", "es2017"],
    "paths": {
      "#app": ["./node_modules/nuxt3/dist/app"],
      "#head": ["./node_modules/nuxt3/dist/head/runtime"]
    }
  },
  "include": ["src/**/*"]
}
